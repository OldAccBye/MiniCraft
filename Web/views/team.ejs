<%- include('header'); %>

    <main>
        <div class="container">
            <div class="text-center my-3">
                <h3>Teammitglieder</h3>
                <p>
                    Hier sind alle Teammitglieder von MiniCraft aufgelistet.
                </p>
            </div>

            <h3 class="label:darkred">Owner</h3>
            <div class="shadow-sm bg-white rounded list-row mb-3">
                <% for (var user of o) { %>
                <div class="list-item">
                    <div><span class="avatar"><img src="https://crafatar.com/avatars/<%= user.UUID %>" alt="."></span></div>
                    <div class="flex px-3">
                        <a href="/p/<%= user.username %>" class="text-decoration-none text-light badge bg-primary"><%= user.username %></a>
                        <div><small class="text-muted">Keine Beschreibung...</small></div>
                    </div>
                </div>
